  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\TtsApp.Engine\TtsApp.Engine.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Using Include="Microsoft.VisualStudio.TestTools.UnitTesting" />
  </ItemGroup>

